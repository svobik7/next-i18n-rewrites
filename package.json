{
  "name": "next-roots",
  "version": "3.0.0-canary.0",
  "description": "Next.js utility to generate internationalized pages with metadata according to custom roots rules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "console.d.ts",
    "console.js",
    "context.d.ts",
    "context.js",
    "link.d.ts",
    "link.js",
    "meta.d.ts",
    "meta.js",
    "index.d.ts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/svobik7/next-roots"
  },
  "author": {
    "name": "Jirka Svoboda",
    "email": "svobik7@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "next",
    "nextjs",
    "next.js",
    "roots",
    "routes",
    "localization",
    "localized",
    "locale",
    "static"
  ],
  "bin": {
    "next-roots": "./dist/bin/builder.js"
  },
  "scripts": {
    "prepublish": "yarn clean && yarn build && yarn test",
    "build": "rollup -c",
    "clean": "rm -rf dist > /dev/null",
    "format": "pretty-quick",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "publish:canary": "yarn publish --tag canary"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "colors": "^1.4.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "next": "^10.2.3",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.50.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.3.12",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "next": "^9.4.4",
    "react": "^16.13.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
